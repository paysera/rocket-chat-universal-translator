# API Configuration
PORT=3001
NODE_ENV=production
API_URL=https://translator.noreika.lt
APP_VERSION=1.0.0
SERVER_NAME=translation-api-prod

# Database Configuration
DATABASE_URL=postgresql://translator:CHANGE_THIS_PASSWORD@localhost:5432/translator
REDIS_URL=redis://localhost:6379

# Rocket.Chat Configuration
ROCKETCHAT_URL=https://your-rocketchat-domain.com
ROCKETCHAT_USER=your-bot-user
ROCKETCHAT_PASSWORD=CHANGE_THIS_PASSWORD

# Security - CHANGE ALL THESE IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
API_KEY=your-super-secret-api-key-change-this-in-production
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this-in-production

# AI Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEEPL_API_KEY=...
GOOGLE_API_KEY=...
AZURE_API_KEY=...

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Rate Limiting (More restrictive in production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# CORS
ALLOWED_ORIGINS=https://your-rocketchat-domain.com,https://your-frontend-domain.com

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Error Monitoring & Logging (Sentry) - PRODUCTION SETTINGS
# Get your DSN from https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ENABLE_PROFILING=true
SENTRY_ENABLE_TRACING=true
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Cache
CACHE_TTL=7200
CACHE_MAX_SIZE=5000

# Billing
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
BILLING_MARKUP=1.10
FREE_QUOTA_CHARACTERS=5000

# Feature Flags
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_RATE_LIMITING=true

# Performance
MAX_MESSAGE_LENGTH=5000
BATCH_SIZE=5
WORKER_THREADS=8
TIMEOUT_MS=30000