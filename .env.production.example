# =============================================================================
# UNIVERSAL TRANSLATOR PRO - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# Never commit actual production values to version control

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================
BUILD_VERSION=1.0.0
BUILD_DATE=2024-01-01T00:00:00Z
BUILD_COMMIT=abc123
API_VERSION=latest
PLUGIN_VERSION=latest

# =============================================================================
# DOMAIN AND SSL CONFIGURATION
# =============================================================================
DOMAIN=translator.yourdomain.com
TRAEFIK_DOMAIN=traefik.translator.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=translator_prod
POSTGRES_USER=translator_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#

# Database connection for application
DATABASE_URL=postgresql://translator_prod:CHANGE_THIS_STRONG_PASSWORD_123!@#@postgres:5432/translator_prod

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!@#

# =============================================================================
# API CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production
API_URL=https://api.translator.yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_JWT_SECRET_789!@#_32_CHARACTERS_MINIMUM
API_KEY=CHANGE_THIS_API_KEY_ABC!@#_32_CHARACTERS_MINIMUM
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_DEF!@#_32_CHARACTERS

# =============================================================================
# ROCKET.CHAT CONFIGURATION
# =============================================================================
ROCKETCHAT_URL=https://your-rocketchat-instance.com
ROCKETCHAT_USER=translator-bot
ROCKETCHAT_PASSWORD=CHANGE_THIS_ROCKETCHAT_PASSWORD_GHI!@#

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-...your-openai-key...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key...

# DeepL
DEEPL_API_KEY=...your-deepl-key...

# Google Translate
GOOGLE_API_KEY=...your-google-key...

# Azure Translator
AZURE_API_KEY=...your-azure-key...

# OpenRouter
OPENROUTER_API_KEY=sk-or-...your-openrouter-key...
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# BILLING CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_live_...your-stripe-secret-key...
STRIPE_WEBHOOK_SECRET=whsec_...your-stripe-webhook-secret...
BILLING_MARKUP=1.05
FREE_QUOTA_CHARACTERS=10000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=https://your-rocketchat-instance.com,https://translator.yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_MESSAGE_LENGTH=5000
BATCH_SIZE=10
WORKER_THREADS=4
TIMEOUT_MS=30000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_JKL!@#
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=translator-backups-prod
AWS_ACCESS_KEY_ID=AKIA...your-aws-access-key...
AWS_SECRET_ACCESS_KEY=...your-aws-secret-key...

# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
TRAEFIK_API_DASHBOARD=true
TRAEFIK_API_INSECURE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_BACKUP=true

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD_MNO!@#
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# ALERT CONFIGURATION
# =============================================================================
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# SSL CERTIFICATE CONFIGURATION
# =============================================================================
# Let's Encrypt email for certificate registration
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# ADDITIONAL SECURITY HEADERS
# =============================================================================
CSP_REPORT_URI=https://yourdomain.report-uri.com/r/d/csp/enforce
HSTS_MAX_AGE=31536000

# =============================================================================
# DATABASE POOL CONFIGURATION
# =============================================================================
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================
REPLICA_COUNT=2
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_REPLICAS=2
AUTO_SCALING_MAX_REPLICAS=10
AUTO_SCALING_TARGET_CPU=70

# =============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# =============================================================================
# Uncomment and modify for staging environment
# DOMAIN=staging.translator.yourdomain.com
# NODE_ENV=staging
# LOG_LEVEL=debug