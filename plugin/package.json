{
  "name": "@universal-translator/plugin",
  "version": "1.0.0",
  "description": "Rocket.Chat plugin for Universal Translator Pro",
  "main": "UniversalTranslatorApp.js",
  "scripts": {
    "dev": "rc-apps watch",
    "build": "echo 'ðŸ“¦ Using pre-built package...' && cp dist/universal-translator-pro.zip ./",
    "build-new": "rc-apps package",
    "compile": "npx tsc",
    "deploy": "rc-apps deploy --url $ROCKETCHAT_URL --username $ROCKETCHAT_USER --password $ROCKETCHAT_PASSWORD",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "npx tsc --noEmit",
    "validate": "node validate-app.js",
    "package-check": "unzip -t universal-translator-pro.zip && echo 'âœ… Package is valid'",
    "clean": "rm -f *.js *.d.ts *.map *.zip",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@rocket.chat/apps-engine": "^1.43.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@rocket.chat/apps-cli": "^1.12.1",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
