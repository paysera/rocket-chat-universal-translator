{
  "name": "@universal-translator/api",
  "version": "1.0.0",
  "description": "Translation API backend for Universal Translator Pro",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/simple-server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "perf:enhanced": "cd ../performance && k6 run --out html=results/enhanced-api-load-test.html enhanced-api-load-test.js",
    "perf:concurrent": "cd ../performance && k6 run --out html=results/concurrent-users-test.html concurrent-users-test.js",
    "perf:cache": "cd ../performance && k6 run --out html=results/cache-effectiveness-test.html cache-effectiveness-test.js",
    "perf:resources": "cd ../performance && k6 run --out html=results/resource-monitoring-test.html resource-monitoring-test.js",
    "perf:baseline": "cd ../performance && BASE_URL=http://192.168.110.199:3012 TARGET_USERS=10 k6 run enhanced-api-load-test.js",
    "perf:load": "cd ../performance && BASE_URL=http://192.168.110.199:3012 TARGET_USERS=100 k6 run enhanced-api-load-test.js",
    "perf:stress": "cd ../performance && BASE_URL=http://192.168.110.199:3012 TARGET_USERS=500 k6 run enhanced-api-load-test.js",
    "perf:spike": "cd ../performance && BASE_URL=http://192.168.110.199:3012 CONCURRENT_USERS=1000 k6 run concurrent-users-test.js",
    "perf:all": "npm run perf:enhanced && npm run perf:concurrent && npm run perf:cache && npm run perf:resources",
    "perf:quick": "cd ../performance && BASE_URL=http://192.168.110.199:3012 TARGET_USERS=25 TEST_DURATION=2m k6 run enhanced-api-load-test.js",
    "perf:ci": "cd ../performance && ./run-performance-ci.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@sentry/node": "^10.12.0",
    "@sentry/profiling-node": "^10.12.0",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.38.0",
    "pg": "^8.11.5",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.3",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}