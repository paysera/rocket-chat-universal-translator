# API Configuration
PORT=3001
NODE_ENV=development
API_URL=https://translator.noreika.lt

# Database Configuration
DATABASE_URL=postgresql://translator:password@localhost:5432/translator
REDIS_URL=redis://localhost:6379

# Rocket.Chat Configuration
ROCKETCHAT_URL=http://localhost:3000
ROCKETCHAT_USER=admin
ROCKETCHAT_PASSWORD=password

# Security
JWT_SECRET=your-secret-key-change-this-in-production
API_KEY=your-api-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# AI Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEEPL_API_KEY=...
GOOGLE_API_KEY=...
AZURE_API_KEY=...

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-rocketchat-domain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Billing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
BILLING_MARKUP=1.05
FREE_QUOTA_CHARACTERS=10000

# Feature Flags
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_RATE_LIMITING=true

# Performance
MAX_MESSAGE_LENGTH=5000
BATCH_SIZE=10
WORKER_THREADS=4
TIMEOUT_MS=30000