{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@plugin/*": ["plugin/*"],
      "@api/*": ["api/*"]
    }
  },
  "references": [
    { "path": "./plugin" },
    { "path": "./api" },
    { "path": "./shared" }
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/tests"
  ]
}